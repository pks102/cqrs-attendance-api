pipeline {
  agent any
    tools {
          maven 'maven 3.9.6'
          jdk 'jdk17'
    }
    
    stages {
        stage('Build maven ') {
            steps {
                dir("attendance-api") {
                        sh 'pwd'
                        sh "mvn clean install -DskipTests"
                    }
            }
        }

        stage('Copy Artifact') {
           steps {
                dir("attendance-api/attendance.cmd") {
                        sh 'pwd'
		        sh 'cp -r target/*.jar docker'
                    }
                dir("attendance-api/attendance.query") {
                        sh 'pwd'
		        sh 'cp -r target/*.jar docker'
                }                
           }
        }

        stage('Build docker image') {
           steps {
               script {
                   dir("attendance-api/attendance.cmd") {
                        sh 'pwd'
		        def customImage = docker.build('pks102/assignment/attendance.cmd', "./docker")
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                       		 customImage.push("${env.BUILD_NUMBER}")
                	}   
                    }
           	 }
               script {
                   dir("attendance-api/attendance.query") {
                        sh 'pwd'
		        def customImage = docker.build('pks102/assignment/attendance.query', "./docker")
                        docker.withRegistry('https://registry.hub.docker.com', 'dockerhub') {
                       		 customImage.push("${env.BUILD_NUMBER}")
                	}   
                    }
           	 }
            }
	}
    }
}
